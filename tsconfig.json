{
    "compileOnSave": false,
    "compilerOptions": {
      "composite": true,
      "declaration": true,
      "declarationMap": true,
      "pretty": true,
      "moduleResolution": "node",
      "module": "commonjs",
      "target": "es2015",
      "downlevelIteration": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "noEmitOnError": false,
      "experimentalDecorators": true,
      "noUnusedParameters": true,
      "noUnusedLocals": true,
      "importHelpers": true,
      "strictNullChecks": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "lib": [ "es2023" ] ,
      "typeRoots": ["./node_modules/@types"],
      "types": [ "node"],
      "baseUrl": "Source",
      "rootDir": ".",
      "outDir": "Build"
    },
    "include": [
      "Source/**/*.ts"
    ]
  }
